{
  "name": "heritage",
  "version": "1.0.0",
  "description": "Family tree and genealogy software for documenting your ancestry",
  "main": "electron/main.js",
  "author": "Patrick Laplante",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.heritage.app",
    "productName": "Heritage",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "database/schema.sql"
    ],
    "fileAssociations": [
      {
        "ext": "heritage",
        "name": "Heritage Family Tree",
        "description": "Heritage genealogy database bundle",
        "mimeType": "application/x-heritage",
        "role": "Editor",
        "icon": "assets/icon.icns"
      }
    ],
    "mac": {
      "category": "public.app-category.lifestyle",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "extendInfo": {
        "UTExportedTypeDeclarations": [
          {
            "UTTypeIdentifier": "com.heritage.familytree",
            "UTTypeDescription": "Heritage Family Tree",
            "UTTypeConformsTo": ["com.apple.package"],
            "UTTypeTagSpecification": {
              "public.filename-extension": ["heritage"]
            }
          }
        ],
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Heritage Family Tree",
            "CFBundleTypeRole": "Editor",
            "LSHandlerRank": "Owner",
            "LSItemContentTypes": ["com.heritage.familytree"],
            "CFBundleTypeIconFile": "icon.icns"
          }
        ]
      }
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "dmg": {
      "title": "Heritage",
      "icon": "assets/icon.icns"
    }
  },
  "dependencies": {
    "@reactflow/node-resizer": "^2.2.14",
    "better-sqlite3": "^11.6.0",
    "electron-store": "^7.0.3",
    "html-to-image": "^1.11.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactflow": "^11.11.4",
    "sharp": "^0.33.5",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^25.1.8",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  }
}
